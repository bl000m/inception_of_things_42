SERVER_IP = "192.168.56.110"
WORKER_IP = "192.168.56.111"

SERVER_HOSTNAME = "mpaganiS"
WORKER_HOSTNAME = "mpaganiSW"

IMAGE = "generic/alpine311"

MEMORY = "2048"
CPUS = 2 

Vagrant.configure("2") do |config|

        config.vm.box = IMAGE
        config.vm.provider "virtualbox" do |vb|
            vb.memory = MEMORY
            vb.cpus = CPUS
        end

        config.vm.define "mpaganiS" do |mpaganiS|
            mpaganiS.vm.hostname = SERVER_HOSTNAME
            mpaganiS.vm.synced_folder ".", "/vagrant"
            mpaganiS.vm.network "private_network", ip: SERVER_IP
            mpaganiS.vm.provision "shell", privileged: true, path: "scripts/server.sh", args: [SERVER_IP]

        end

        config.vm.define "mpaganiSW" do |mpaganiSW|
            mpaganiSW.vm.hostname = WORKER_HOSTNAME
            mpaganiSW.vm.synced_folder ".", "/vagrant"
            mpaganiSW.vm.network "private_network", ip: WORKER_IP
            mpaganiSW.vm.provision "shell", privileged: true, path: "scripts/worker.sh", args: [SERVER_IP, WORKER_IP]
        end
    end